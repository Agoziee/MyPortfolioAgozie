<!DOCTYPE html>
<html lang="en">
<head>
    <!-- META -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <meta property="og:title" content="Agozirim Emeh | Portfolio" />
    <meta name="description" content='Portfolio for Agozirim Emeh'>
    <meta property="og:image:type" content="image/png" />
    <meta name="author" content="Agozirim Emeh">

    <!-- FAVICON -->
    <link rel="icon"
          type="image/png"
          href="./images/favicon.ico">

    <!-- TITLE -->
    <title>Portfolio - Agozirim Emeh</title>

    <!-- FONTAWESOME -->
    <script src="https://kit.fontawesome.com/bd53be0974.js" crossorigin="anonymous"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- HEADER -->
    <header class="header">
        <!-- HAMB -->
        <div class="hamburger">
            <div class="hamburger__line hamburger__line1"></div>
            <div class="hamburger__line hamburger__line2"></div>
            <div class="hamburger__line hamburger__line3"></div> 
        </div>
        <div class="header__text">
            <!-- NAVBAR -->
            <nav class="navbar">
                <ul class="navbar__list">
                    <li class="navbar__item"><a class="navbar__link" href="#aboutMe">01.<span class="navbar__link--span">About me</span></a></li>

                    <li class="navbar__item"><a class="navbar__link" href="#stack">02.<span class="navbar__link--span">Stack</span></a></li>

                    <li class="navbar__item"><a class="navbar__link" href="#projects">03.<span class="navbar__link--span">Projects</span></a></li>

                    <li class="navbar__item"><a class="navbar__link" href="#contact">04.<span class="navbar__link--span">Contact</span></a></li>
                </ul>
            </nav>
            <!-- RESUME BUTTON -->
            <div class="resume">
                <link class="resume__btn">
                    <a class="resume__link" href="https://drive.google.com/file/d/19b7mXeQpwnwJ0sn2B6GYK2h_Vc2XA2sJ/view" target="_blank">Resume</a>
                </>
            </div>
        </div>
    </header>
    
    <div>
        <main class="main">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>


    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
